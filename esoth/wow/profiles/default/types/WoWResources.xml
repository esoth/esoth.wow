<?xml version="1.0"?>
<object name="WoWResources" meta_type="Dexterity FTI"
   i18n:domain="esoth.wow" xmlns:i18n="http://xml.zope.org/namespaces/i18n">

 <!-- Basic metadata -->
 <property name="title" i18n:translate="">WoW Resources</property>
 <property name="description" i18n:translate="">Contains info on all items, pets, and mounts</property>
 <property name="allow_discussion">False</property>
 <property name="global_allow">True</property>
 <property name="filter_content_types">False</property>
 <property name="allowed_content_types" />
 <property name="content_icon">++resource++esoth.wow/wowchar.png</property>

 <!-- schema interface -->
 <property name="schema">esoth.wow.interfaces.IWoWResourcesSchema</property>

 <!-- class used for content items -->
 <property name="klass">esoth.wow.content.resources.WoWResources</property>

 <!-- add permission -->
 <property name="add_permission">esoth.wow.AddGearPath</property>

 <!-- enabled behaviors -->
 <property name="behaviors">
     <element value="plone.app.content.interfaces.INameFromTitle" />
     <element value="plone.app.referenceablebehavior.referenceable.IReferenceable" />
 </property>

 <!-- View information -->
 <property name="default_view">@@find-player</property>
 <property name="default_view_fallback">False</property>
 <property name="view_methods">
  <element value="@@find-player"/>
 </property>

 <!-- Method aliases -->
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="edit" to="@@edit"/>
 <alias from="sharing" to="@@sharing"/>
 <alias from="view" to="(selected layout)"/>

 <!-- Actions -->
 <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${object_url}" visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
  <permission value="Modify portal content"/>
 </action>
 <action title="Mounts" action_id="mounts" category="object" condition_expr=""
    url_expr="string:${object_url}/@@mount-resources" visible="True">
  <permission value="Manage portal"/>
 </action>
 <action title="Pets" action_id="pets" category="object" condition_expr=""
    url_expr="string:${object_url}/@@pet-resources" visible="True">
  <permission value="Manage portal"/>
 </action>
 <action title="Gear" action_id="gear" category="object" condition_expr=""
    url_expr="string:${object_url}/@@gear-resources" visible="True">
  <permission value="Manage portal"/>
 </action>
</object>