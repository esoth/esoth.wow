<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="content-core"
            tal:define="gearmap context/gearMap|nothing;
                        mtool nocall:context/portal_membership;
                        templateId string:@@gearpath-view;
                        checkPermission nocall:mtool/checkPermission">

  <div metal:use-macro="here/gear_macro/macros/char_header" />

  <div tal:condition="gearmap">
    <fieldset><legend>Legend</legend>
      <span style="padding:0.5em; background-color:#D9EAD3; border: 1px dashed black;"><b>Equipped</b></span>
      <span style="padding:0.5em; background-color:#FFF2CC; border: 1px dashed black;">Acquired</span>
      <span style="padding:0.5em; border: 1px dashed black;"><img tal:attributes="src string:${portal_url}/++resource++esoth.wow/bis.png" /> BiS</span>
      <span style="padding:0.5em; border: 1px dashed black; text-decoration: line-through; color: #D6D6D6">Downgrade</span>
      <span style="padding:0.5em;">
        <a id="gearhelp"
           tal:condition="python:checkPermission('Modify portal content',context)"
           tal:attributes="href string:${context/absolute_url}/@@gear-help">How do I use this?</a>
        <span tal:condition="python:checkPermission('Modify portal content',context)">|</span>
        <a id="verify"
           tal:attributes="href string:${context/absolute_url}/@@character-verify">Claim this character</a>
      </span>
    </fieldset><br/>
  
    <div id="blackout" style="display: none;"></div>
  
    <div class="gearTable">
      <dl class="enableFormTabbing" id="gearTable">
        <tal:items define="items gearmap/weapon;
                           slot string:weapon;
                           slotName string:Weapon;">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/offhand;
                           slot string:offhand;
                           slotName string:Off Hand;"
                   condition="python:[s for s in context.spec if s in ['holy-priest','discipline-priest','shadow-priest','mage',
                              'warlock','elemental-shaman','restoration-shaman','balance-druid','restoration-druid','holy-paladin','mistweaver-monk',
                              'protection-paladin','protection-warrior']]">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/weapon;
                           slot string:offhand;
                           slotName string:Off Hand;"
                   condition="python:[s for s in context.spec if s in ['unholy-dk','frost-dk','rogue','enhancement-shaman','fury-warrior','windwalker-monk','brewmaster-monk']]">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/head;
                           slot string:head;
                           slotName string:Head;">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/neck;
                           slot string:neck;
                           slotName string:Neck;">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/shoulders;
                           slot string:shoulders;
                           slotName string:Shoulders;">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/back;
                           slot string:back;
                           slotName string:Back;">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/chest;
                           slot string:chest;
                           slotName string:Chest;">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/wrists;
                           slot string:wrists;
                           slotName string:Wrists;">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/hands;
                           slot string:hands;
                           slotName string:Hands;">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/waist;
                           slot string:waist;
                           slotName string:Waist;">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/legs;
                           slot string:legs;
                           slotName string:Legs;">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/feet;
                           slot string:feet;
                           slotName string:Feet;">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/ring1;
                           slot string:ring1;
                           slotName string:Ring (1);">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/ring2;
                           slot string:ring2;
                           slotName string:Ring (2);">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/trinket1;
                           slot string:trinket1;
                           slotName string:Trinket (1);">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
  
        <tal:items define="items gearmap/trinket2;
                           slot string:trinket2;
                           slotName string:Trinket (2);">
          <metal:item use-macro="here/gear_macro/macros/item" />
        </tal:items>
      </dl>
      <a href="javascript:void(0);" onclick="$('.downgradeItem').show(); $('.downgradeFlip').toggle(); $('#flipped').val(1)"
         class="downgradeFlip">
        Show downgraded items
      </a>
      <a href="javascript:void(0);" onclick="$('.downgradeItem').hide(); $('.downgradeFlip').toggle(); $('#flipped').val(0)"
         style="display: none;"
         class="downgradeFlip">
        Hide downgraded items
      </a>
      <input type="hidden" name="flipped" value="0" id="flipped"/>
    </div>    
  
    <div id="bossNeedContainer"><a tal:attributes="href string:${context/absolute_url}/@@gearpath-view">reload</a> if table does not appear momentarily</div>
  
    <input type="hidden" name="boss_table" id="boss_table"
           tal:attributes="value string:${context/absolute_url}/@@boss_table" />
    <script type="text/javascript">
      $(document).ready(function() {
        $('.downgradeItem').hide();
        $('#verify').prepOverlay({subtype:'ajax'});
        $('#gearhelp').prepOverlay({subtype:'ajax'});
        $("#bossNeedContainer").load($('#boss_table').val(),function(responseTxt,statusTxt,xhr){});
        $('.equip-link').bind('click',function(event){
          event.preventDefault();
          $('#blackout').toggle();
          slot = $(this).closest('tr').attr('slot');
          equipped = $($('tr[slot="'+slot+'"].equippedItem').children()[0]).text().trim() // need this for later
          $('tr[slot="'+slot+'"]').removeClass('equippedItem');               // make everything unequipped for this slot
          val = $($(this).closest('tr').children()[0]).text().trim();        // get the name of the item. Mark this acquired for all slots
          $("#gearTable tr:contains('"+val+"')").addClass('acquiredItem');
          if (val != equipped) {
            $(this).closest('tr').addClass('equippedItem');                   // equip this item if not already. Can't toggle because we turned all off
          }
          $.get(this.href,{},function(response){
            $("#bossNeedContainer").load($('#boss_table').val(),function(responseTxt,statusTxt,xhr){
            });
            $('#blackout').toggle();
          });
        });
        $('.acquire-link').bind('click',function(event){
          event.preventDefault();
          $('#blackout').toggle();
          val = $($(this).closest('tr').children()[0]).text();
          $("#gearTable tr:contains('"+val+"')").toggleClass('acquiredItem');
          $.get(this.href,{},function(response){
            $("#bossNeedContainer").load($('#boss_table').val(),function(responseTxt,statusTxt,xhr){
            });
            $('#blackout').toggle();
          });
        });
        $('.bis-link').bind('click',function(event){
          event.preventDefault();
          $('#blackout').toggle();
          val = $($(this).closest('tr').children()[0]).text();
          $("#gearTable tr:contains('"+val+"')").toggleClass('bisItem');
          $.get(this.href,{},function(response){
            $("#bossNeedContainer").load($('#boss_table').val(),function(responseTxt,statusTxt,xhr){
            });
            $('#blackout').toggle();
          });
        });
        $('.downgrade-link').bind('click',function(event){
          event.preventDefault();
          $('#blackout').toggle();
          val = $($(this).closest('tr').children()[0]).text();
          $("#gearTable tr:contains('"+val+"')").toggleClass('downgradeItem');
          $.get(this.href,{},function(response){
            $("#bossNeedContainer").load($('#boss_table').val(),function(responseTxt,statusTxt,xhr){
            });
            $('#blackout').toggle();
            if ($('#flipped').val() == 0) {
              $('.downgradeItem').hide();
            }
            else {
              $('.downgradeItem').show();
            }
          });
        });
      });
    </script>

    <div class="visualClear"><!-- --></div>
  </div>
  
  <div tal:condition="not:gearmap">
    No spec has been selected, or the spec is not yet supported.
  </div>

</metal:main>

</body>
</html>
