<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:content-core fill-slot="main">
    <metal:content-core define-macro="content-core"
                        tal:define="templateId string:@@mounts-view;
                                    dummy here/autoUpdateData;
                                    mounts context/mountDetails">
      <h1 tal:content="string:${here/Title} Mounts"/>

      <div metal:use-macro="here/gear_macro/macros/char_header" />
      
      <div>
      
      <h2>Mounts</h2>
      <table class="listing">
        <thead>
          <tr>
            <th>Mount Name</th>
            <th>Source</th>
            <th>Collected</th>
            <th>Flying</th>
            <th>Aquatic</th>
            <th>Jumping</th>
          </tr>
        </thead>
        <tbody>
          <tal:mount repeat="mount mounts">
            <tr>
              <td>
                <a tal:attributes="href string:http://www.wowhead.com/npc=${mount/creatureId}">
                  <img tal:attributes="src string:http://us.media.blizzard.com/wow/icons/18/${mount/icon}.jpg" />
                  <span tal:omit-tag="" tal:content="mount/name"/>
                </a>
              </td>
              <td tal:content="string:unknown" />
              <td>
                <span tal:condition="mount/isCollected">&#10004;</span>
              </td>
              <td>
                <span tal:condition="mount/isFlying">&#10004;</span>
              </td>
              <td>
                <span tal:condition="mount/isAquatic">&#10004;</span>
              </td>
              <td>
                <span tal:condition="mount/isJumping">&#10004;</span>
              </td>
            </tr>
          </tal:mount>
        </tbody>
      </table>

    </metal:content-core>
</metal:content-core>

</body>
</html>